<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joueur 1 : "/>

        <EditText
            android:id="@+id/pts_j1_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pts"/>

        <Button
            android:id="@+id/ajouter_j1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ajouter"/>

        <Button
            android:id="@+id/soustraire_j1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="soustraire"/>

        <TextView
            android:id="@+id/pts_j1_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 points"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pts_j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joueur 2 : "/>

        <EditText
            android:id="@+id/pts_j2_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3O "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pts"/>

        <Button
            android:id="@+id/ajouter_j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ajouter"/>

        <Button
            android:id="@+id/soustraire_j2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="soustraire"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 points"/>
    </LinearLayout>

</LinearLayout>